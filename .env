# Environment Variables for Virtual Try-On Project
# Update these values with your actual configuration

# Flask Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
FLASK_ENV=development
DEBUG=True

# Database Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=Nar@652002
MYSQL_DATABASE=virtual_tryon_db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Security Configuration
SESSION_COOKIE_SECURE=False
JWT_SECRET_KEY=your-jwt-secret-key

# File Storage Configuration
UPLOAD_FOLDER=./data/user_uploads
CLOTHING_FOLDER=./data/clothing_items

# AI Model Paths
MODEL_PATH=./models/trained
PIFUHD_CHECKPOINT_PATH=./models/trained/pifuhd_checkpoint.pth
VITON_CHECKPOINT_PATH=./models/trained/viton_checkpoint.pth
SIZE_MODEL_PATH=./models/trained/size_estimation_model.pkl

# Camera Configuration
CAMERA_WIDTH=640
CAMERA_HEIGHT=480
CAMERA_FPS=30

# TensorFlow Configuration
TF_CPP_MIN_LOG_LEVEL=2
CUDA_VISIBLE_DEVICES=0

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=virtual_tryon.log

# Cloud Storage (Optional)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_S3_BUCKET=your-s3-bucket-name
# AWS_REGION=us-east-1

# Google Cloud (Optional)
# GOOGLE_CLOUD_PROJECT=your-project-id
# GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# Unity Integration
UNITY_PROJECT_PATH=./unity_project
UNITY_BUILD_PATH=./unity_builds

# Performance Monitoring
ENABLE_PROFILING=False
LOG_PERFORMANCE_METRICS=True

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

